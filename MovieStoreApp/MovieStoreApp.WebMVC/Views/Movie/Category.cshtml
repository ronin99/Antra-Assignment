        <div class="col-8">
            <img  class="img-thumbnail"src="@Model.PosterUrl"/>
        </div>
        <div class="col-4">
            <table>
                <tr class="row mt-2"" >
                    <td>Title:</td>
                    <td>@Model.Title</td>
                </tr>

                <tr class="row mt-2"" >
                    <td>Tagline:</td>
                    <td>@Model.Tagline</td>
                </tr>
                <tr class="row mt-2"" >
                    <td>Overview:</td>
                    <td>@Model.Overview</td>
                </tr>

                  <tr class="row mt-2"" >
                    <td>Relase Date:</td>
                    <td>@Model.ReleaseDate</td>
